@model DocumentUploadViewModel
@using System.Linq;
@using System.Collections.Generic;
@{
    this.ViewData["Title"] = "Document Upload";
}
    <section class="container-fluid">
        <div class="row flex-column align-content-center">
        <h2 class="text-center pl-3 pt-4 mt-1">@ViewData["Title"]</h2>
            <div class="col-md-6 mt-4 mb-5">
                <div class="upload-card card card-primary">
                    <div class="card-header">
                        <h4 class="card-title text-white mb-0">Upload File</h4>
                    </div>
                    <!-- /.card-header -->

                    <!-- form start -->
                    <form class="upload-form"
                          role="form" 
                          method="post"
                          enctype="multipart/form-data"
                          asp-controller="Documents"
                          asp-action="Upload">

                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Title">Document Title</label>
                                <input asp-for="Title" class="form-control" placeholder="Write title...">
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CreatorFirstName">First Name</label>
                                <input asp-for="CreatorFirstName" class="form-control" placeholder="Your first name...">
                                <span asp-validation-for="CreatorFirstName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CreatorLastName">Last Name</label>
                                <input asp-for="CreatorLastName" class="form-control" placeholder="Your last name...">
                                <span asp-validation-for="CreatorLastName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="file"
                                       asp-for="Document"
                                       accept="application/msword,
                                               application/vnd.openxmlformats-officedocument.wordprocessingml.document,
                                               application/vnd.ms-excel,
                                               application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,
                                               application/pdf" />
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="pt-2">
                                <button type="submit" class="btn btn-success text-white">Upload</button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </section>